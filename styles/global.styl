// Flexbox Classes
.flex-horizontal {
  display: flex;
  flex-direction: row;
}

.flex-vertical {
  display: flex;
  flex-direction: column;
}

.flex-wrap {
  flex-wrap: wrap;
}

.align-center {
  align-items: center;
}

.align-start {
  align-items: flex-start;
}

.align-end {
  align-items: flex-end;
}

.justify-center {
  justify-content: center;
}

.justify-start {
  justify-content: flex-start;
}

.justify-end {
  justify-content: flex-end;
}

.space-between {
  display: flex;
  justify-content: space-between;
}

.text-title {
  font-family: PingFang-SC-Bold;
  // font-weight: bold;
  font-weight: 650;
  font-stretch: normal;
  letter-spacing: 1px;
  color: #080e27;
}

.top-title {
  @extend .text-title;
  font-size: 18px;
}

// 2nd title
.second-title {
  @extend .text-title;
  font-size: 16px;
}

.small-title {
  @extend .text-title;
  font-size: 15px;
}

.primary-text {
  font-family: PingFangSCMedium-Medium;
  font-size: 15px;
  font-weight: normal;
  letter-spacing: -0.41px;
}

.content-text {
  font-family: PingFangSCMedium-Medium;
  font-size: 14px;
  font-weight: normal;
  letter-spacing: -0.41px;
  color: #4e5773;
}

.caption-text {
  font-family: PingFang-SC-Medium;
  font-size: 14px;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 1px;
  color: #d4dae9;
}

.color-title {
  color: #080e27;
}

.content-color {
  color: #4e5773;
}

.caption-color {
  color: #d4dae9;
}

.disabled {
  color: #c0c4cc;
}

.text-bold {
  font-weight: bold;
}

.list-item {
  padding: 5px;
}

.rounded-borders {
  border-radius: 5px;
}

