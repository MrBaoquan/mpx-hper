mt-md {
  margin-top: 5px;
}

mt-lg {
  margin-top: 10px;
}

// 单行文本超出部分显示省略号
.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

// 多行文本超出部分显示省略号
.ellipsis-multiline {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3; // 显示行数
  -webkit-box-orient: vertical;
}

.inline-text {
  display: inline-block;
  margin: 5px 3px;
}

.dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  display: inline-block;
  margin-right: 5px;
  margin-left: 5px;
  margin-top: 2px;
  margin-bottom: 2px;
  vertical-align: middle;
}

.error-dot {
  @extend .dot;
  background-color: #e01a00;
}

.warning-dot {
  @extend .dot;
  background-color: orange;
}

.info-dot {
  @extend .dot;
  background-color: #d4d9e9;
}

.success-dot {
  @extend .dot;
  background-color: #37D385;
}

// 垂直分割线
.vertical-divider {
  width: 1px;
  height: 100%;
  background-color: #e8e8e8;
  margin: 0 5px;
}

// 水平分割线
.horizontal-divider {
  width: 100%;
  height: 1px;
  background-color: #e8e8e8;
  margin: 5px 0;
}

.border-bottom {
  border-bottom: 1px solid #CFD6E3;
}

.border-top {
  border-top: 1px solid #CFD6E3;
}

.box-view {
  width: auto;
  background: #FFFFFF;
  box-shadow: 0px 4px 10px 0px rgba(155, 171, 233, 0.3);
  border-radius: 20px;
  margin: 16px;
  padding: 16px;
}

.fixed {
  position: fixed;
}

.relative {
  position: relative;
}

.absolute {
  position: absolute;
}

.absolute-full {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.float-left {
  float: left;
}

.float-right {
  float: right;
}
